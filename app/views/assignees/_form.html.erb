<%= form_for @assignee do |f| %>
	<%= f.label :assignee  %>
	<%= f.text_field :assignee , :size => 40 %><br/>
	<%= f.label :description %>
	<%= f.text_area :description,  :cols =>40, :rows => 3 %> <br/>
	<div class = "tasks">
		<h3>Tasks</h3>
		<%= f.fields_for :tasks do |builder| %>
			<%= render 'task_fields', :f => builder %>
		<% end %>
		<%= link_to_add_fields "Add Task", f, :tasks %>
	</div>
	<div class="contacts">
		<h3>Contacts</h3>
		<%= f.fields_for :contacts do |builder| %>
			<%= render 'contact_fields', :f =>builder %>
		<% end %>
		<%= link_to_add_fields "Add Contact", f, :contacts %>
	</div>
	<%= f.submit %>
	<% if @assignee.id != nil%>
		<%= link_to 'Cancel Changes', :back, :class=>'cancelChanges', :confirm => 'Cancel Changes to the current record?' %>
	<% end %>
<% end %>