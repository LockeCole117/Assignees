<!DOCTYPE html>
<html>
<head>
  <title>Assignees</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
	<a href="<%= root_path %>">Assignee Lookup</a>: <%= @Title %>
	<menu>
		<ul>
			<li><a href="/search">Search</a></li>
			<li><a href="/assignees">Edit Assignees</a></li>
		</ul>
	</menu>
</header>
<% flash.each do |name, message| %>
	<div id="flash_<%= name %>">
		<%= message %>
	</div>
<% end %>

<%= yield %>

</body>
</html>
